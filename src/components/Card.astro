---
export interface Props {
  title: string;
  body: string;
  dark?: boolean;
}

const { title, body, dark = false } = Astro.props as Props;
---

<div
  class={`card ${dark ? "dark:bg-primary dark:text-white" : ""} mb-8 p-6 border shadow-md rounded-md`}
>
  <h2 class="text-2xl font-bold mb-3">{title}</h2>
  <p>{body}</p>
</div>
